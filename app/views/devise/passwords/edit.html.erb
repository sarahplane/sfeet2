<div class="container-fluid">
  <div class="row row-centered padding-above">
    <h2>Change your password</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= devise_error_messages! %>
      <%= f.hidden_field :reset_password_token %>

      <div class="user-field margin-above">
        <%= f.password_field :password, autofocu: true, autocomplete: "off", placeholder:
          "NEW Password (#{if @minimum_password_length then @minimum_password_length end} characters minimum)" %>
      </div>

      <div class="user-field margin-above">
        <%= f.password_field :password_confirmation, autocomplete: "off",  placeholder: "New Password Confirmation"  %>
      </div>

      <div class="margin-above btn btn-primary">
        <%= f.submit "Change my password" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>

  </div>
</div>
