<div class="container-fluid">
  <div class="row row-centered padding-above">
    <h2>Sign up for Sfeet</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="field">
        <div class="user-field margin-above">
          <%= f.email_field :email, autofocus: true, placeholder: "Email"%>
        </div>

      <div class="user-field margin-above">
        <%= f.password_field :password, autocomplete: "off", placeholder:
          "Password (#{if @minimum_password_length then @minimum_password_length end} characters minimum)" %>
      </div>

      <div class="user-field margin-above">
        <%= f.password_field :password_confirmation, autocomplete: "off",  placeholder: "Password Confirmation"  %>
      </div>

      <div class="margin-above btn btn-primary">
        <%= f.submit "Sign Up" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>

  </div>
</div>
