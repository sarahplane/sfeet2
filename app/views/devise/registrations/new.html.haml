.container-fluid
  .row.row-centered.padding-above
    %h2 Sign up for Sfeet
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      - unless devise_error_messages!.blank?
        .alert.alert-danger.alert-dismissible{:role => "alert"}
          %button.close{"aria-label" => "Close", "data-dismiss" => "alert", :type => "button"}
            %span{"aria-hidden" => "true"} x
          = devise_error_messages!
      .field
        .user-field.margin-above
          = f.email_field :email, autofocus: true, placeholder: "Email"
        .user-field.margin-above
          = f.password_field :password, autocomplete: "off", placeholder:                                    |
            "Password (#{if @minimum_password_length then @minimum_password_length end} characters minimum)" |
        .user-field.margin-above
          = f.password_field :password_confirmation, autocomplete: "off",  placeholder: "Password Confirmation"
        .margin-above.btn.btn-primary
          = f.submit "Sign Up"
        = render "devise/shared/links"
